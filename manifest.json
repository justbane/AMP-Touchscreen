{
  "manifest_version": 2,
  "name": "AMP Touchscreen",
  "version": "0.9.2",
  "icons": {
    "128": "tfs-logo.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions" : [
      { "fileSystem":["write", "retainEntries", "directory"] },
      "notifications",
      "storage"
  ],
  "minimum_chrome_version": "35",
  "externally_connectable": {
    "ids": [
      "*"
    ]
  }
}
